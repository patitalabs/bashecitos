[user]
	name = REPLACE_ME_WITH_GITHUB_USERNAME
	email = REPLACE_ME_WITH_GITHUB_EMAIL
[push]
	default = simple
[core]
	autocrlf = input
[alias]
	br = branch
	ci = commit
    cia = commit -a
	st = status
	co = checkout
    cop = !git checkout $1 && git pull origin $1
    pu = pull
    pur = pull origin HEAD --rebase
    new = checkout -b
    del= branch -D
    ls = log --oneline
	last = log -1 HEAD
    lsp = log --all --decorate --oneline --graph
    delre = push origin -d
    prure = fetch --prune
    review = merge --no-commit --squash
    end-review = reset --hard origin/master
[init]
	defaultBranch = main